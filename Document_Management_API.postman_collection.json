{
  "info": {
    "name": "Document Management System API",
    "description": "API collection for Document Management System with approval workflow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newuser\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"full_name\": \"New User\",\n  \"roles\": [\"author\"]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "username",
                  "value": "admin",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "admin123",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Documents",
      "item": [
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Test Document",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "This is a test document",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/document.pdf"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/documents/upload",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "upload"]
            }
          }
        },
        {
          "name": "List Documents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/documents?status=draft&my_documents=true",
              "host": ["{{baseUrl}}"],
              "path": ["documents"],
              "query": [
                {
                  "key": "status",
                  "value": "draft"
                },
                {
                  "key": "my_documents",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Document",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/documents/:document_id",
              "host": ["{{baseUrl}}"],
              "path": ["documents", ":document_id"],
              "variable": [
                {
                  "key": "document_id",
                  "value": "uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Submit for Review",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/documents/:document_id/submit",
              "host": ["{{baseUrl}}"],
              "path": ["documents", ":document_id", "submit"],
              "variable": [
                {
                  "key": "document_id",
                  "value": "uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Review Document",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"approve\",\n  \"comments\": \"Document looks good, approved for next stage\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/documents/:document_id/review",
              "host": ["{{baseUrl}}"],
              "path": ["documents", ":document_id", "review"],
              "variable": [
                {
                  "key": "document_id",
                  "value": "uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Document History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/documents/:document_id/history",
              "host": ["{{baseUrl}}"],
              "path": ["documents", ":document_id", "history"],
              "variable": [
                {
                  "key": "document_id",
                  "value": "uuid-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Audit",
      "item": [
        {
          "name": "Get Audit Logs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/audit/logs?action=POST&date_from=2024-01-01&date_to=2024-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["audit", "logs"],
              "query": [
                {
                  "key": "action",
                  "value": "POST"
                },
                {
                  "key": "user_id",
                  "value": "uuid-here",
                  "disabled": true
                },
                {
                  "key": "date_from",
                  "value": "2024-01-01"
                },
                {
                  "key": "date_to",
                  "value": "2024-12-31"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}